<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg_gradient_rev"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/driver_panel">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_pane">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/logo"/>
    </RelativeLayout>
    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_pane"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/route_spinner"
        android:background="#eae4e4"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="#24970d"
        android:layout_below="@id/route_spinner"
        android:layout_marginTop="60dp"
        android:id="@+id/start_tracker"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_below="@+id/start_tracker"
        android:background="#ff0000"
        android:layout_marginTop="60dp"
        android:id="@+id/stop_tracker"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>